local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Drambob ", "DarkTheme")
_G.autoTrueKill = true
_G.autoTrueBuff = true

--Main
local Main = Window:NewTab("Main")
local MainSection = Main:NewSection("Main")


MainSection:NewToggle("Insta-Deposit", "Instantly deposits all your probes.", function(state)
    if state then
    _G.autoTrueKill = true
        while _G.autoTrueKill == true do
-- Script generated by SimpleSpy - credits to exx#9394

game:GetService("ReplicatedStorage").Signals.RemoteEvents.PutRemote:FireServer()

wait(1)
end
    else
        _G.autoTrueKill = false
    end
end)



MainSection:NewToggle("EZ-Money", "Gives you a large amount of probes.", function(state)
    if state then
    _G.autoTrueKill = true
        while _G.autoTrueKill == true do
-- Script generated by SimpleSpy - credits to exx#9394

local args = {
    [1] = 17,
    [2] = Vector3.new(-187.34292602539062, 2.961134433746338, 266.46435546875)
}

game:GetService("ReplicatedStorage").Signals.RemoteEvents.GetWoolRemote:FireServer(unpack(args))
wait(0.001)
end
    else
        _G.autoTrueKill = false
    end
end)

MainSection:NewToggle("Boss-Kill", "Hold the sniper while activated to kill the boss almost instantly.", function(state)
    if state then
    _G.autoTrueKill = true
        while _G.autoTrueKill == true do
-- Script generated by SimpleSpy - credits to exx#9394

local args = {
    [1] = workspace.Boss.Boss.Humanoid,
    [2] = 105
}

game:GetService("Players").LocalPlayer.Character.Sniper.Remotes.TakeDamage:FireServer(unpack(args))

wait(0.001)
end
    else
        _G.autoTrueKill = false
    end
end)



MainSection:NewToggle("Auto Sprint", "Lets you sprint without holding shift.", function(state)
    if state then
    _G.autoTrueKill = true
        while _G.autoTrueKill == true do
-- Script generated by SimpleSpy - credits to exx#9394

local args = {
    [1] = true
}

game:GetService("ReplicatedStorage").Signals.RemoteEvents.SprintRemote:FireServer(unpack(args))

wait(10)
end
    else
        _G.autoTrueKill = false
local args = {
    [1] = false
}

game:GetService("ReplicatedStorage").Signals.RemoteEvents.SprintRemote:FireServer(unpack(args))
wait(0.01)
    end
end)

local Buff = Window:NewTab("Buff")
local BuffSection = Buff:NewSection("Buff")



BuffSection:NewToggle("Speedboost", "Speeds you up", function(state)
    if state then
        _G.autoTrueBuff = true
        while _G.autoTrueBuff == true do
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 120
        wait(0.1)
end
    else
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
        _G.autoTrueBuff = false
        wait(0.1)
    end
end)
